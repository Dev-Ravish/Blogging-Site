<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs')  %> 

<body>

    <%- include('./partials/navbar.ejs')  %> 

    <div>
        <h2>All Blogs</h2>
        <% if(blogs.length>0){ %> 
            <% blogs.forEach(blog =>{%>
                <a href="/blogs/<%= blog._id %> ">
                    <h3><%= blog.title %> </h3>
                    <p><%= blog.snippet %> </p>
                </a>
            <% }) %>
        <% }else{ %>
            <p>There are no blogs to be dislayed.</p>
        <% } %> 
    </div>

    <%- include('./partials/footer.ejs')  %> 
</body>
</html>